# FinBot V3 Test Environment Configuration
NODE_ENV=test

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/finbot_test
DB_HOST=localhost
DB_PORT=5432
DB_NAME=finbot_test
DB_USER=finbot_test_user
DB_PASSWORD=test_password_here

# JWT Configuration
JWT_SECRET=test_jwt_secret_key_for_testing_only
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=24h

# API Configuration
API_PORT=3001
API_HOST=localhost
CORS_ORIGIN=http://localhost:3000

# Email Configuration (Test)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=test@ethereal.email
SMTP_PASS=test_password
EMAIL_FROM=test@finbot.com

# Telegram Configuration (Test)
TELEGRAM_BOT_TOKEN=test_bot_token
TELEGRAM_CHAT_ID=test_chat_id

# WhatsApp Configuration (Test)
WHATSAPP_API_URL=https://api.whatsapp.com
WHATSAPP_TOKEN=test_whatsapp_token

# File Upload Configuration
UPLOAD_MAX_SIZE=1048576
UPLOAD_PATH=./test-uploads

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=./logs/test.log

# Security Configuration
BCRYPT_ROUNDS=4
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=1000

# Redis Configuration (Test)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=test_redis_password

# Monitoring Configuration
SENTRY_DSN=
HEALTH_CHECK_INTERVAL=5000

# Feature Flags
ENABLE_ALERTS=true
ENABLE_NOTIFICATIONS=false
ENABLE_MONTE_CARLO=true
ENABLE_SCENARIOS=true
ENABLE_REPORTS=true

# Turkey Specific
DEFAULT_CURRENCY=TRY
VAT_RATE=0.20
SGK_RATE=0.15
TAX_CALENDAR_ENABLED=true

# Performance Configuration
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT=10000
CACHE_TTL=60
