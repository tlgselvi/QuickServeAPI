{
  "name": "finbot-v3",
  "version": "3.0.0",
  "description": "FinBot v3 - Advanced Financial Management System",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:unit": "vitest run --reporter=verbose tests/sprint1/ tests/sprint2/ tests/sprint3/ tests/security/",
    "test:integration": "vitest run --reporter=verbose tests/integration/",
    "test:performance": "vitest run --reporter=verbose tests/performance/",
    "test:sprint1": "vitest run --reporter=verbose tests/sprint1/",
    "test:sprint2": "vitest run --reporter=verbose tests/sprint2/",
    "test:sprint3": "vitest run --reporter=verbose tests/sprint3/",
    "test:security": "vitest run --reporter=verbose tests/security/",
    "test:database": "vitest run --reporter=verbose tests/sprint1/database/ tests/sprint2/database/",
    "test:api": "vitest run --reporter=verbose tests/sprint1/api/ tests/sprint2/api/",
    "test:calculations": "vitest run --reporter=verbose tests/sprint1/calculations/ tests/sprint2/calculations/ tests/sprint3/calculations/",
    "test:alerts": "vitest run --reporter=verbose tests/sprint1/alerts/",
    "test:import-export": "vitest run --reporter=verbose tests/sprint1/import-export/",
    "test:collections": "vitest run --reporter=verbose tests/sprint2/collections/",
    "test:notifications": "vitest run --reporter=verbose tests/sprint2/notifications/",
    "test:modules": "vitest run --reporter=verbose tests/sprint3/modules/",
    "test:scenarios": "vitest run --reporter=verbose tests/sprint3/scenarios/",
    "test:simulation": "vitest run --reporter=verbose tests/sprint3/simulation/",
    "test:reports": "vitest run --reporter=verbose tests/sprint3/reports/",
    "test:dashboard": "vitest run --reporter=verbose tests/sprint3/dashboard/",
    "test:rbac": "vitest run --reporter=verbose tests/security/rbac-rls-audit.test.ts",
    "test:turkey": "vitest run --reporter=verbose tests/security/turkey-specific.test.ts",
    "lint": "eslint server shared --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint server shared --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:migrate": "drizzle-kit migrate",
    "db:generate": "drizzle-kit generate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx server/scripts/demo-data.ts",
    "start": "node dist/index.js",
    "start:dev": "tsx watch server/index.ts",
    "clean": "rm -rf dist node_modules/.vite",
    "prepare": "npm run build",
    "ci:test": "npm run test:run -- --reporter=json --outputFile=test-results.json",
    "ci:coverage": "npm run test:coverage -- --reporter=json --outputFile=coverage-results.json",
    "ci:lint": "npm run lint",
    "ci:build": "npm run build",
    "ci:all": "npm run ci:lint && npm run ci:test && npm run ci:coverage && npm run ci:build"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-hover-card": "^1.0.7",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-sheet": "^0.1.0",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-toggle": "^1.0.3",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@tanstack/react-query": "^5.17.0",
    "@tanstack/react-table": "^8.11.6",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "cmdk": "^0.2.0",
    "date-fns": "^3.3.1",
    "drizzle-orm": "^0.29.1",
    "express": "^4.18.2",
    "lucide-react": "^0.303.0",
    "postgres": "^3.4.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-router-dom": "^6.20.1",
    "recharts": "^2.8.0",
    "sonner": "^1.3.1",
    "tailwind-merge": "^2.2.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "drizzle-kit": "^0.20.7",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^23.0.1",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-pwa": "^0.17.4",
    "vitest": "^1.1.0",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
